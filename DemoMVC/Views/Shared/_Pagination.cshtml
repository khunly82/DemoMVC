@model Pagination

<nav>
    <ul class="pagination">
        @if (Model.CurrentPage != 1)
        {
            <li class="page-item"><a asp-controller="movie" asp-action="index" asp-route-page="@(Model.CurrentPage - 1)" class="page-link">Previous</a></li>
        }

        @for (int i = Model.CurrentPage - Model.Range; i <= Model.CurrentPage + Model.Range; i++)
        {
            @if (i > 0 && i <= Model.PageMax)
            {
                @if (i == Model.CurrentPage)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#" aria-current="page">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@i">@i</a>
                    </li>

                }
            }
        }
        @if (Model.CurrentPage != 500)
        {
            <li class="page-item"><a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.CurrentPage + 1)">Next</a></li>
        }
    </ul>
</nav>