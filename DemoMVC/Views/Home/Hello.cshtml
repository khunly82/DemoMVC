@* commentaire en razor (cshtml) *@
@{
    // écrire du code c#
    int i = 42;
    string nom = "Khun";
    // Layout = null;
    bool isLogged = false;

    List<string> ingredients = ["fromages", "bacon de dinde", "saussicon halal"];

}

@*Afficher une variable*@
<p>Hello @nom !!</p>
<p>J'ai @(i + 1) ans</p>

@if(isLogged)
{
    <p>Vous êtes connecté</p>
}
else
{
    <p>Vous n'êtes pas connecté</p>
}

<h1>Ingredients d'une bonne pizza</h1>
<table class="table table-bordered">    
@foreach(string ing in ingredients) {
    <tr>
        <td>@ing</td>
    </tr>
}
</table>

